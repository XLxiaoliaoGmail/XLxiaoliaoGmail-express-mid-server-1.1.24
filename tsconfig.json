  "include": ["**/*.ts", "src/InvServer/InvUtils.js", "public/js/dashboard/winCoor.js", "public/js/dashboard/ViewDrawer.ts", "public/js/dashboard/ViewDrawer.ts"],
  "exclude": ["node_modules"] // 排除 node_modules 文件夹
}
